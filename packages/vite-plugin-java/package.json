{
  "name": "vite-plugin-java",
  "type": "module",
  "version": "0.0.3",
  "description": "A Vite plugin for Java",
  "author": "Benny Yen <benny123tw@gmail.com>",
  "license": "MIT",
  "keywords": [
    "vite",
    "plugin",
    "java"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && npm run lint && npm run build:tsup && npm run build:dev-page",
    "build:dev-page": "node scripts/build-dev-page.js",
    "build:tsup": "tsup --format esm,cjs --clean --dts",
    "lint": "eslint .",
    "test": "vitest"
  },
  "peerDependencies": {
    "vite": "^5.0.0 || ^6.0.0"
  },
  "devDependencies": {
    "@types/debug": "^4.1.12",
    "copy-file-util": "^1.2.1",
    "debug": "^4.3.5",
    "dotenv": "^16.4.5",
    "glob": "^10.4.3",
    "picocolors": "^1.0.1",
    "rimraf": "^5.0.8",
    "smob": "^1.5.0",
    "tsup": "^8.1.0",
    "typescript": "^5.5.3",
    "vite": "^6.3.5",
    "vitest": "^1.6.0"
  }
}
